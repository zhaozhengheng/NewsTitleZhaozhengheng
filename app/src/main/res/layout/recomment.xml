<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager_tuijian"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        >

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/LinearLayout_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ViewPager_tuijian"
       android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/PullToRefreshListView_tuijian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/LinearLayout_tuijian"></com.handmark.pulltorefresh.library.PullToRefreshListView>


</RelativeLayout>